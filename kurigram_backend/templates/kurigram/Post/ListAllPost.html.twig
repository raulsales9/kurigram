{% extends 'layout.html.twig' %}

{% block content %}
<div class="container">
  <a class="btn btn-primary mt-5 mb-5" style="margin-left: 200px" href="{{ path('app_insert_posts') }}">Crear nuevo post</a>

{% if not posts %}
  <h3>No hay ning√∫n post disponible</h3>
{% else %}
   
  {% set elementsPerPage = 1 %}
			{% set lowerLimit = (page -1) * elementsPerPage + 1 %}
			{% set upperLimit = page * elementsPerPage %} 
			 {% for post in posts %}
				{% if loop.index >= lowerLimit and loop.index <= upperLimit %} 
    <div class="card card-rounded text-center mb-5" style="width: 400px; height: 300px; border: 2px solid black; margin-left: 200px">
  
 
      {% if post.file %}
        <img src="{{ asset('uploads/' ~ post.file) }}" alt="imagen del post" class="card-img-top" style="height: 200px; object-fit: cover;">
      {% endif %}
      <div class="card-body">
        <h5 class="card-title">{{ post.title }}</h5>
		<h6 class="card-subtitle mb-2 text-muted">
 {#   Publicado por {{ post.user.name }} (id: {{ post.user.id }}) #}
</h6>
        <p class="card-text">{{ post.text }}</p>
        <p class="card-text">{{ post.createdAt|date('d-m-Y H:i') }}</p>
        <p class="card-text">{{post.likes}}</p>
        {# <a href="{{ path('app_like_post', {'id': post.idPost}) }}" class="btn btn-primary">Me gusta ({{ post.likes }})</a>
        <a href="{{ path('app_dislike_post', {'id': post.idPost}) }}" class="btn btn-primary">No me gusta ({{ post.dislikes }})</a> #}
      </div>
    </div>
	{% endif %} 
 {% endfor %}
  
	
	<div class="text-center"> {% set totalPages = (((posts|length)/elementsPerPage)|round(0, 'ceil')) %}
		{% if page > 1 %}
			<a href="{{ path('app_Post',{'page':1}) }}">&lt;&lt;</a>
			<a href="{{ path('app_Post',{'page':page - 1}) }}">&lt;</a>
		{% else %}
			<span>&lt;&lt;</span>
			<span>&lt;</span>
		{% endif %}
		{% for pageButton in 1..totalPages %}
			{% if pageButton == page%}
				<span>{{ pageButton }}</span>
			{% else %}
				<a href="{{ path('app_Post',{'page':pageButton}) }}">{{ pageButton }}</a>
			{% endif %}
		{% endfor %}
		{% if page < totalPages %}
			<a href="{{ path('app_Post',{'page':page + 1}) }}">&gt;</a>
			<a href="{{ path('app_Post',{'page':totalPages}) }}">&gt;&gt;</a>
		{% else %}
			<span>&gt;</span>
			<span>&gt;&gt;</span>
		{% endif %}</div>
		
{% endif %}
</div>

{% endblock %}